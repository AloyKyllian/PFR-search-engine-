#include <stdint.h>
#include <stdio.h>

int comptemot ()
{
    int cpt=0;
    char mot;
    while(scanf("%c",&mot)!=0)
    {
        cpt++;
    }

return cpt;
}


void descripteur_texte( int nbr_mot, int nbr_occ)
{
    char tab[2][nbr_mot];
    char mot;
    int case=0;
    bool verif;
    scanf("%c",&mot);
    for(int j=0;i<nbr_mot;j++)
    {
        tab[1][j]=0;
    }
    for(int i=0;i<nbr_mot;i++)
    {
        if(mot==tab[0][i])
        {
            tab[1][i]++;
            verif =true;
        }
    }
    if(verif==false && case <=nbr_mot)
    {
        tab[0][case]=mot;
        case++;
    }

    // 2eme partie

    int max=0;
    int nbr=0;
    int case_occ=0;
    int cpt=0;
    char tab_occ[2][nbr_occ];
    while(cpt<nbr_occ)
    {
    for(int y=0;y<nbr_mot;y++)
    {
        if(tab[1][y]=>max)
        {
            max=tab[1][y];
            nbr=y;
        }
    }
    tab_occ[0][case_occ]=tab[0][nbr];
    tab_occ[1][case_occ]=max;
    tab[1][nbr]=0;
    cpt++;
    }
    //Affichage

    for(int x=0;x<nbr_occ;x++)
    {
        printf("%c",tab_occ[0][x],": %c",tab_occ[1][x],"   |   ");
    }


}